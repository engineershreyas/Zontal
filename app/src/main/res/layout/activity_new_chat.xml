<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#26c6da"
    tools:context="com.shreyas.zontal.zontal.NewChatActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_username_field"
        android:hint="Enter Their Username"
        android:textColor="#fff"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/enter_username_field"
        android:id="@+id/enter_text_field"
        android:textColor="#fff"
        android:hint="Enter your message here"
         />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/send_msg_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/enter_text_field"
        android:background="#1E88E5"
        android:layout_marginTop="10dp"
        android:text="Send"
        />




</RelativeLayout>
